datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  media     Media[]
}

model Media {
  id        Int      @id @default(autoincrement())
  title     String
  type      String?
  director  String?
  budget    String?
  location  String?
  duration  String?
  year      String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int?
  user      User?     @relation(fields: [userId], references: [id])
}
